#!/bin/bash

# Start All Systems Script - Clean Structure
echo "üöÄ Starting Potassium Radar System (Clean Structure)..."
echo "=================================================="

# Get current directory
ROOT_DIR=$(pwd)
BACKEND_DIR="$ROOT_DIR/backend"
FRONTEND_DIR="$ROOT_DIR/frontend"

# Function to check if a port is in use
check_port() {
    local port=$1
    if lsof -Pi :$port -sTCP:LISTEN -t >/dev/null ; then
        return 0  # Port is in use
    else
        return 1  # Port is free
    fi
}

# Function to start a service in background
start_service() {
    local name=$1
    local directory=$2
    local command=$3
    local port=$4
    
    echo "üì° Starting $name..."
    
    if check_port $port; then
        echo "‚ö†Ô∏è  $name is already running on port $port"
    else
        cd "$directory"
        echo "üìÇ Changed to directory: $directory"
        echo "üîß Running command: $command"
        
        # Start the service in background
        nohup $command > "$ROOT_DIR/$(echo "$name" | tr '[:upper:]' '[:lower:]' | tr ' ' '_').log" 2>&1 &
        local pid=$!
        echo "‚úÖ $name started with PID: $pid"
        
        # Wait a moment to check if the service started successfully
        sleep 3
        if kill -0 $pid 2>/dev/null; then
            echo "üéâ $name is running successfully on port $port"
        else
            echo "‚ùå Failed to start $name"
            return 1
        fi
        
        # Return to root directory
        cd "$ROOT_DIR"
    fi
    
    echo ""
}

# Start Backend Server
echo "1Ô∏è‚É£ Starting Backend Server..."
if [ -d "$BACKEND_DIR" ] && [ -f "$BACKEND_DIR/package.json" ]; then
    # Install dependencies if needed
    if [ ! -d "$BACKEND_DIR/node_modules" ]; then
        echo "üì¶ Installing backend dependencies..."
        cd "$BACKEND_DIR"
        npm install
        cd "$ROOT_DIR"
    fi
    
    start_service "Backend Server" "$BACKEND_DIR" "npm start" 3001
else
    echo "‚ùå Backend directory not found or missing package.json: $BACKEND_DIR"
fi

# Start Local Image Server
echo "2Ô∏è‚É£ Starting Local Image Server..."
LOCAL_SERVER_FILE="$FRONTEND_DIR/local-image-server.js"
if [ -f "$LOCAL_SERVER_FILE" ]; then
    start_service "Local Image Server" "$FRONTEND_DIR" "node local-image-server.js" 3003
else
    echo "‚ùå Local Image Server not found: $LOCAL_SERVER_FILE"
fi

# Start AI Plate Recognition Service
echo "3Ô∏è‚É£ Starting AI Plate Recognition Service..."
AI_SERVICE_FILE="$ROOT_DIR/start_ai_service.py"
if [ -f "$AI_SERVICE_FILE" ]; then
    echo "ü§ñ Starting AI License Plate Recognition Service..."
    cd "$ROOT_DIR"
    nohup python3 start_ai_service.py > "$ROOT_DIR/ai_plate_service.log" 2>&1 &
    local ai_pid=$!
    echo "‚úÖ AI Service started with PID: $ai_pid"
    sleep 3
    if kill -0 $ai_pid 2>/dev/null; then
        echo "üéâ AI Plate Recognition Service is running successfully"
    else
        echo "‚ùå Failed to start AI Plate Recognition Service"
    fi
else
    echo "‚ùå AI Service script not found: $AI_SERVICE_FILE"
fi

# Start AI Results API
echo "4Ô∏è‚É£ Starting AI Results API..."
AI_API_FILE="$BACKEND_DIR/ai_results_api.js"
if [ -f "$AI_API_FILE" ]; then
    start_service "AI Results API" "$BACKEND_DIR" "node ai_results_api.js" 3004
else
    echo "‚ùå AI Results API not found: $AI_API_FILE"
fi

# Start Plate Recognition Viewer
echo "5Ô∏è‚É£ Starting Plate Recognition Viewer..."
PLATE_SERVER_FILE="$FRONTEND_DIR/plate-recognition-server.js"
if [ -f "$PLATE_SERVER_FILE" ]; then
    start_service "Plate Recognition Viewer" "$FRONTEND_DIR" "node plate-recognition-server.js" 36555
else
    echo "‚ùå Plate Recognition Server not found: $PLATE_SERVER_FILE"
fi

# Start Frontend Dashboard
echo "6Ô∏è‚É£ Starting Frontend Dashboard..."
if [ -d "$FRONTEND_DIR" ] && [ -f "$FRONTEND_DIR/package.json" ]; then
    # Install dependencies if needed
    if [ ! -d "$FRONTEND_DIR/node_modules" ]; then
        echo "üì¶ Installing frontend dependencies..."
        cd "$FRONTEND_DIR"
        npm install
        cd "$ROOT_DIR"
    fi
    
    start_service "Frontend Dashboard" "$FRONTEND_DIR" "npm start" 3002
else
    echo "‚ùå Frontend directory not found or missing package.json: $FRONTEND_DIR"
fi

echo "=================================================="
echo "üéØ System Status Summary:"
echo "=================================================="

# Check all services
services=(
    "Backend Server:3001"
    "Local Image Server:3003"
    "AI Plate Recognition:AI_SERVICE"
    "AI Results API:3004"
    "Plate Recognition Viewer:36555"
    "Frontend Dashboard:3000"
)

for service in "${services[@]}"; do
    IFS=':' read -r name port <<< "$service"
    if [ "$port" = "AI_SERVICE" ]; then
        # Check if AI service is running by looking for the process
        if pgrep -f "ai_plate_recognition_service.py" > /dev/null; then
            echo "‚úÖ $name - Running (monitoring /srv/processing_inbox)"
        else
            echo "‚ùå $name - Not running"
        fi
    elif check_port $port; then
        echo "‚úÖ $name - Running on http://localhost:$port"
    else
        echo "‚ùå $name - Not running on port $port"
    fi
done

echo ""
echo "üåê Access URLs:"
echo "   ‚Ä¢ Main Dashboard: http://localhost:3000"
echo "   ‚Ä¢ Backend API: http://localhost:3001"
echo "   ‚Ä¢ Local Image Server: http://localhost:3003"
echo "   ‚Ä¢ AI Results Viewer: http://localhost:3004"
echo "   ‚Ä¢ Plate Recognition Viewer: http://localhost:36555"
echo ""
echo "üìù Logs are saved in the root directory:"
echo "   ‚Ä¢ backend_server.log"
echo "   ‚Ä¢ ftp_image_server.log"
echo "   ‚Ä¢ ai_plate_service.log"
echo "   ‚Ä¢ frontend_dashboard.log"
echo ""
echo "üõë To stop all services, run: ./stop-all.sh"
echo "=================================================="

# Run startup verification and fixes
echo ""
echo "üîß Running startup verification and fixes..."
if [ -f "./verify-and-fix-startup.sh" ]; then
    ./verify-and-fix-startup.sh
else
    echo "‚ö†Ô∏è Verification script not found - system may need manual checks"
fi
